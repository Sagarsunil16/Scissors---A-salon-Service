# Start with a Node.js base image (like a pre-built kitchen)
     FROM node:18-alpine

     # Set a working directory (like a workspace in the container)
     WORKDIR /app

     # Copy package.json and package-lock.json to install dependencies
     COPY package*.json ./

     # Install dependencies
     RUN npm install

     # Copy the rest of your backend code
     COPY . .

     # Accept service account as a build arg
     ARG FIREBASE_SERVICE_ACCOUNT

     # Create serviceAccount.json inside the image
     RUN mkdir -p secureDocs \
     && echo "$FIREBASE_SERVICE_ACCOUNT" > secureDocs/serviceAccount.json
     # Build TypeScript to JavaScript
     RUN npm run build

     # Expose the port your backend uses (e.g., 5000)
     EXPOSE 5000

     # Start the app
     CMD ["node", "dist/index.js"]